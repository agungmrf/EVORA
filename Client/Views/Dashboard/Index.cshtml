@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "_Dashboard";
}

<div class="card-body px-4 py-3">
    <div class="row align-items-center">
        <div class="col-9">
            <h4 class="fw-semibold mb-8">Home</h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a class="text-muted" asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 d-flex">
        <div class="card border-1 bg-light-danger w-25 ms-4">
            <div class="card-body">
                <div class="text-center">
                    <!-- <img src="/static/images/svgs/icon-mailbox.svg" width="50" height="50" class="mb-3" alt=""> -->
                    <span>
                        <i class="ti ti-user" style="font-size: 40px;"></i>
                    </span>
                    <p class="fw-semibold text-danger mb-0">Employees</p>
                    <h5 class="fw-semibold text-danger mb-0" id="total-employee">0</h5>
                </div>
            </div>
        </div>
        <div class="card border-1 bg-light-warning w-25  ms-4">
            <div class="card-body">
                <div class="text-center">
                    <!-- <img src="/static/images/svgs/icon-mailbox.svg" width="50" height="50" class="mb-3" alt=""> -->
                    <span>
                        <i class="ti ti-user-plus" style="font-size: 40px;"></i>
                    </span>
                    <p class="fw-semibold text-warning mb-0">Customers</p>
                    <h5 class="fw-semibold text-warning mb-0" id="total-customer">0</h5>
                </div>
            </div>
        </div>
        <div class="card border-5 bg-light-info w-25  ms-4">
            <div class="card-body">
                <div class="text-center">
                    <!-- <img src="/static/images/svgs/icon-mailbox.svg" width="50" height="50" class="mb-3" alt=""> -->
                    <span>
                        <i class="ti ti-package" style="font-size: 40px;"></i>
                    </span>
                    <p class="fw-semibold fs-3 text-info mb-1">Packages</p>
                    <h5 class="fw-semibold text-info mb-0" id="total-package">0</h5>
                </div>
            </div>
        </div>
        <div class="card border-1 bg-light-success w-25  ms-4">
            <div class="card-body">
                <div class="text-center">
                    <!-- <img src="/static/images/svgs/icon-mailbox.svg" width="50" height="50" class="mb-3" alt=""> -->
                    <span>
                        <i class="ti ti-article" style="font-size: 40px;"></i>
                    </span>
                    <p class="fw-semibold fs-3 text-info mb-1">Transaction</p>
                    <h5 class="fw-semibold text-info mb-0" id="total-transaction">0</h5>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Recent Transactions</h5>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle table-striped" id="table-transaction">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">No.</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Email</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Invoice</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Package</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Date Event</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Status</h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/dashboard/assets/js/index.js"></script>
}
