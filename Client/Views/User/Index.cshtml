
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardUser";
}

<div class="row">
    <div class="card-body px-4">
        <div class="row align-items-center">
            <div class="col-9">
                <h4 class="fw-semibold mb-3">Overview</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card w-100 bg-light-info overflow-hidden shadow-none">
            <div class="card-body">
                <div class="row justify-content-between align-items-center">
                    <div class="col-sm-6">
                        <h5 class="fw-semibold mb-9 fs-5">Welcome back Kafka!</h5>
                        <p class="mb-9">You haven't ordered anything yet.</p>
                        <a asp-action="Order" asp-controller="User" class="btn btn-primary fs-2">Order Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card w-100 bg-light-info overflow-hidden shadow-none">
            <div class="card-body py-3">
                <div class="row justify-content-between align-items-center">
                    <div class="col-sm-6">
                        <h5 class="fw-semibold mb-9 fs-5">Welcome back Kafka!</h5>
                        <p class="mb-9">Here is your order status.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
