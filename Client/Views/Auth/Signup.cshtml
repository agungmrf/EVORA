@{
    ViewData["Title"] = "Evora - SignUp";
    Layout = "_LoginPage";
}
<div class="position-relative overflow-hidden min-vh-100">
    <div class="d-flex justify-content-lg-end w-100 ">
        <div class="row w-100">
            <div class="col-lg-6 col-xl-8">
                <div>
                    <a style="font-size: 50px;font-weight: bold;position: absolute;"
                       class="text-nowrap logo-img d-block px-4 pb-5 pb-xl-0 w-100">EVORA</a>
                </div>
                <div class="d-none d-lg-flex align-items-center justify-content-center">
                    <img src="~/dashboard/assets/images/events.jpg" style="height: calc(100vh);" alt="event">
                </div>
            </div>
            <div class="col-lg-6 col-xl-4 border-start">
                <div class="card mb-0 shadow-none rounded-0 min-vh-100 h-100">
                    <div class="card-body">
                        <a asp-action="/" class="text-nowrap logo-img text-center d-block py-9 mt-5 w-100">
                            <b style="font-size: xx-large;">Welcome to EVORA</b>
                        </a>
                        <p class="text-center" style="font-size: 15px;">Register Account</p>
                        <form>
                            <div class="mb-1">
                                <div class="row">
                                    <div class="col">
                                        <label for="fNameRegis" class="form-label">First Name</label>
                                        <input type="text" class="form-control" id="inputnameRegis">
                                    </div>
                                    <div class="col">
                                        <label for="lNameRegis" class="form-label">Last Name</label>
                                        <input type="text" class="form-control" id="inputnameRegis">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-1">
                                <label for="EmailRegis" class="form-label">Email</label>
                                <input type="email" class="form-control" id="inputEmailRegis">
                            </div>
                            <div class="mb-1">
                                <div class="row">
                                    <div class="col">
                                        <label for="Gender" class="form-label">Gender</label>
                                        <!-- <input type="text" class="form-control" id="Gender"> -->
                                        <select class="custom-select form-select" id="Gender">
                                            <option selected>Choose One</option>
                                            <option value="1">Male</option>
                                            <option value="0">Female</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <label for="phoneNumberRegis" class="form-label">Phone Number</label>
                                        <input type="text" class="form-control" id="phoneNumberRegis">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-1">
                                <label for="PasswordRegis" class="form-label">Password</label>
                                <input type="password" class="form-control" id="PasswordRegis">
                            </div>
                            <div class="mb-3">
                                <label for="confirmPasswordRegis" class="form-label">Confirm Password</label>
                                <input type="password" class="form-control" id="inputPasswordRegis">
                            </div>
                            <a asp-action="/" class="btn btn-primary w-100 py-8 fs-4 mb-2 rounded-2">Sign Up</a>
                            <div class="d-flex align-items-center justify-content-center">
                                <p class="fs-4 mb-0 ">Already have an Account?</p>
                                <a class="text-primary fw-bold ms-2" style="font-size: 18px;"
                                   asp-action="Index" asp-controller="Auth">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>